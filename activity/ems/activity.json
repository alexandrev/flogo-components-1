{
  "name": "ems",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref": "github.com/mmussett/flogo-components/activity/ems",
  "title": "Send EMS",
  "description": "An EMS message producer",
  "author": "Mark Mussett <mmussett@tibco.com>",
  "homepage": "https://github.com/mmussett/flogo-components/tree/master/activity/ems",
  "inputs":[
    {
      "name": "content",
      "type": "string",
      "required": true
    },
    {
      "name": "destination",
      "type": "string",
      "required": true
    },
    {
      "name": "serverUrl",
      "type": "string",
      "required": true
    },
    {
      "name": "user",
      "type": "string",
      "required": true
    },
    {
      "name": "password",
      "type": "string",
      "required": false
    },
    {
      "name": "exchangeMode",
      "type": "string",
      "required": true,
      "allowed": ["send-only","send-receive"]
    },
    {
      "name": "deliveryDelay",
      "type": "integer",
      "required": true
    },
    {
      "name": "deliveryMode",
      "type": "string",
      "required": true,
      "allowed" : ["persistent","non_persistent","reliable"]
    },
    {
      "name": "expiration",
      "type": "integer",
      "required": true
    },
    {
      "name": "tracing",
      "type": "any",
      "required": false
    }
  ],
  "outputs": [
    {
      "name": "response",
      "type": "string"
    },
    {
      "name": "tracing",
      "type": "any"
    }
  ]
}
